<%= stylesheet_link_tag "style.css" %>

<h1>Builds</h1>

<ul>
  <%= form_with url: builds_path, method: :get, local: true, data: { turbo_frame: 'table' } do %>
    <%= label_tag :order_by, 'Order by: ' %>
    <%= select_tag :order_by, options_for_select([
      ["Usages", :usages],
      ["Winrate", :kd_perc],
      ["Fame ratio", :fame_ratio],
      ["Kills", :kills],
      ["Deaths", :deaths],
      ["Assists", :assists],
      ["Kill fame", :kill_fame],
      ["Death fame", :death_fame],
      ["Avg Ip", :avg_ip],
      ["Avg Ip difference", :avg_ip_diff]
    ]), onchange: "this.form.requestSubmit()" %>
  <% end %>
  <%= turbo_frame_tag 'table' do %>
    <table style="text-align: left">
      <tr>
        <th>Build</th>
        <th>Usages</th>
        <th>Winrate</th>
        <th>Fame ratio</th>
        <th>Kills</th>
        <th>Deaths</th>
        <th>Assists</th>
        <th>Kill fame</th>
        <th>Death fame</th>
        <th>Average Ip</th>
        <th>Average Ip difference</th>
      </tr>
      <% @builds.each do |build| %>
        <tr>
          <td>
            <% [:main_hand, :off_hand, :head, :chest, :feet, :cape].each do |type| %>
              <% if build.send("#{type}_type").nil? %>
                <%= image_tag('empty.svg', size: '50x50')%>
                <% next %>
              <% end %>
              <% icon_path = "100x100/#{type.to_s.pluralize}/T8_#{build.send("#{type}_type").try(:path)}@0_Q4.png" %>
              <%= Rails.application.assets.find_asset(icon_path).nil? ? image_tag('pending-work-icon.svg', size: '50x50') : image_tag(icon_path, size: "50x50") %>
            <% end %>
          </td>
          <td>
            <%= build.usages %>
          </td>
          <td>
            <%= "#{build.kd_perc / 100}%" %>
          </td>
          <td>
            <%= build.fame_ratio.zero? ? '-' : build.fame_ratio.to_f / 100 %>
          </td>
          <td>
            <%= build.kills %>
          </td>
          <td>
            <%= build.deaths %>
          </td>
          <td>
            <%= build.assists %>
          </td>
          <td>
            <%= ActiveSupport::NumberHelper.number_to_human build.kill_fame %>
          </td>
          <td>
            <%= ActiveSupport::NumberHelper.number_to_human build.death_fame %>
          </td>
          <td>
            <%= build.avg_ip %>
          </td>
          <td>
            <%= build.avg_ip_diff %>
          </td>
        </tr>
      <% end %>
    </table>
    <%= link_to "Show more", builds_path(list: @list.to_i + 20) %>
  <% end %>
</ul>
